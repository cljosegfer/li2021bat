{
  "name": "beat_aligned_swin_transformer",
  "n_gpu": 1,
  "arch": {
    "type": "beat_aligned_transformer",
    "args": {
      "global_layer_num": 0,
      "depths": [
        2,
        2,
        2,
        6,
        2
      ],
      "num_heads": [
        8,
        16,
        32,
        64,
        128
      ],
      "in_chans": 8,
      "embed_dim": 96,
      "patch_size":5,
      "window_size": [5,5,5,5,5],
      "img_size": 400,
      "num_classes": 108
    }
  },
  "data_loader": {
    "type": "ChallengeDataLoader_beat_aligned_data",
      "args": {
        "label_dir": "/home/josegfer/datasets/challenge2020/data",
        "split_index": "process/data_split/split1.mat",
        "save_dir": "data",
        "lead_number": 8,
        "batch_size": 98,
        "resample_Fs": 500,
        "window_size": 5000,
        "normalization": false,
        "augmentations": null,
        "seg_with_r": false,
        "load_saved_data": false,
        "save_data": false,
        "p": 0.8
      }
  },

  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 0.0001
    }
  },
  "loss": {
    "type": "bce_with_logits_loss"
  },
  "metrics": [
    "accuracy",
    "f_measure",
    "macro_f_beta_measure",
    "macro_g_beta_measure",
    "macro_auroc",
    "macro_auprc",
    "challenge_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 20,
      "gamma": 0.1
    }
  },
  "trainer": {
        "epochs": 1000,
        "save_dir": "output/saved",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_challenge_metric",
        "early_stop": 5,
        "tensorboard": false,
        "only_scored_class": true
    },
  "evaluater": {
      "result_dir": "output/saved",
      "verbosity": 2,
      "visualization": {
          "scatter": true
      },
    "seg_with_r": false,
    "n_segment": 1
  }
}
